#Make a nice histogram from data

x<-runif(1000,0,1)

colors = c("red", "yellow", "green", "violet", "orange", "blue", "pink", "cyan","darksalmon","darkgreen")


hist(x,col=colors ,xlab="x-axis",ylab="frequency")



#change the width
x<-sample(c(1,2,3,4), 1000, replace=TRUE,prob=c(0.2,0.3,0.3,0.2));
hist(x)
my.bin.width<-1
hist(x,breaks=seq(0,4,by=1))

